<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/coilImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="8dp" />

    <ImageView
        android:id="@+id/coilRoundImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="206dp" />

    <ImageView
        android:id="@+id/coilBlurImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="100dp" />

    <ImageView
        android:id="@+id/roundedImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="100dp" />

    <ImageView
        android:id="@+id/grayScaleImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="200dp" />

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="200dp" />

    <ImageView
        android:id="@+id/assetsImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="200dp" />

    <ImageView
        android:id="@+id/noFilterBitmapAssetsImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="200dp" />

    <ImageView
        android:id="@+id/coloredNoFilterBitmapAssetsImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="200dp" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:constraint_referenced_ids="coilImage,coilRoundImage,coilBlurImage,roundedImage,grayScaleImage,backgroundImage,assetsImage,noFilterBitmapAssetsImage,coloredNoFilterBitmapAssetsImage"
        app:flow_horizontalAlign="center"
        app:flow_horizontalGap="8dp"
        app:flow_maxElementsWrap="2"
        app:flow_verticalAlign="center"
        app:flow_verticalGap="8dp"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>