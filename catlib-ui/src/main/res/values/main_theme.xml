<resources>

    <style name="CatLibTheme.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/default_dot</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenBackground">@drawable/default_dot</item>
        <item name="postSplashScreenTheme">@style/CatLibTheme</item>
    </style>

    <style name="M3AppTheme" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="alertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog</item>
        <item name="dialogCornerRadius">28dp</item>
    </style>

    <style name="CatLibTheme" parent="M3AppTheme">
        <item name="sign_in_app_icon">@drawable/ic_settings_black_24dp</item>
        <item name="colorPrimary">@color/orange_dark</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/orange_dark</item>

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/enter_anim</item>
        <item name="android:windowSharedElementExitTransition">@transition/exit_anim</item>
        <item name="android:fitsSystemWindows">false</item>

        <item name="linearProgressIndicatorStyle">@style/Widget.App.CircularProgressIndicator</item>
    </style>

    <style name="Widget.App.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CircularProgressIndicator</item>
    </style>

    <style name="ThemeOverlay.App.CircularProgressIndicator" parent="">
        <item name="colorPrimary">@color/orange_dark</item>
    </style>
</resources>